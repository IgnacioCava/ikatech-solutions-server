{
  "name": "ikatech-solutions-server",
  "version": "1.0.0",
  "description": "server for the Ikatech Solutions admission test",
  "main": "index.js",
  "author": "Ignacio Cava",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "start": "pnpm run compile && node ./dist/index.js",
    "husky-setup": "husky install && npx husky add .husky/pre-commit 'npx --no-install lint-staged' && npx husky add .husky/commit-msg 'npx --no-install commitlint --edit $1'"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "graphql": "^16.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
